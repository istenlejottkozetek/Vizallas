@page
@model Vizallas.Pages.VarosszuresModel

@{
    ViewData["Title"] = "Varosszures";
}

<h1>Varosszures</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<p>
    <form method="get">
        <select asp-for="@Model.KivalasztottVaros">
            @foreach (var Varos in Model.Varos)
            {
                <option value="@Varos">@Varos</option>
            }
            <input type="submit" value="OK" />

        </select>
    </form>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Adatok[0].datum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adatok[0].vizallas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adatok[0].varos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adatok[0].folyo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Adatok) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.datum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.vizallas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.varos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.folyo)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
